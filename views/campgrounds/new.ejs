<% layout('/layouts/boilerplate') -%>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label for="title" class="form-label font-monospace">Title</label>
        <input
          id="title"
          type="text"
          class="form-control"
          name="campground[title]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">This field is required</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label font-monospace">Location</label>
        <input
          type="text"
          name="campground[location]"
          id="location"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">This field is required</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label font-monospace">Image Url</label>
        <input
          type="text"
          name="campground[image]"
          id="image"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">This field is required</div>
      </div>

      <div class="mb-3">
        <label for="price" class="font-monospace form-label font-monospace"
          >Campground Price</label
        >
        <div class="input-group">
          <span class="input-group-text">&#8377;</span>
          <input
            type="number"
            class="form-control"
            id="price"
            step="0.01"
            name="campground[price]"
            placeholder="0.00"
            aria-label="Amount (to the nearest dollar)"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">This field is required</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label font-monospace"
          >Description</label
        >
        <textarea
          type="text"
          name="campground[description]"
          id="description"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">This field is required</div>
      </div>
      <button type="submit" class="font-monospace btn btn-success">
        Create Campground
      </button>
    </form>
  </div>
</div>

<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
  (function () {
    "use strict";

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.querySelectorAll(".needs-validation");

    // Loop over them and prevent submission
    Array.prototype.slice.call(forms).forEach(function (form) {
      form.addEventListener(
        "submit",
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
